#/bin/bash

if [ ! -f "$HOME/bin/adt-eclipse" ] || [ ! -f "$HOME/bin/android" ]
then
	echo "Installing ADT Bundle package..."
	SOURCE=http://dl.google.com/android/adt/adt-bundle-linux-x86_64-20130522.zip
	INSTALLER=adt-bundle-linux-x86_64-20130522.zip
	if [ ! -f "$_DOWNLOAD_PATH/$INSTALLER" ]
	then
		cd $_DOWNLOAD_PATH
		wget $SOURCE
	fi
	mkdir -p $HOME/bin
	cd $_DOWNLOAD_PATH
	unzip $INSTALLER
	rm -f $HOME/bin/adt-eclipse $HOME/bin/android
	ln -s $_DOWNLOAD_PATH/adt-bundle-linux-x86_64-20130522/eclipse/eclipse $HOME/bin/adt-eclipse
	ln -s $_DOWNLOAD_PATH/adt-bundle-linux-x86_64-20130522/sdk/tools/android $HOME/bin/android
else
	echo "ADT Bundle package already installed."
fi

